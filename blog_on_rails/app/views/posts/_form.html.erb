<div class="show">
<%= form_for(@post) do |f| %>
    <% if @post.errors.present? %>
      <p>
        <%= @post.errors.full_messages.join(', ') %>
      </p>
    <% end %>
  
    <div>
      <%= f.label :title %>
    </div>
    <div>
      <%= f.text_area( 
        :title, 
        cols: 30, 
        row:1
       )%>
    </div>
    <div>
      <%= f.label :body %>
    </div>
    <div>
      <%= f.text_area(
        :body,
        cols: 30,
        rows: 3
       )%>
    </div>
    <br>
    <% if (action_name == "new") %>
        <%= f.submit "Create Post",  class: "btn btn-outline-primary" %>
    <%else%>
        <%= f.submit "Update Post",  class: "btn btn-outline-primary" %>
    <%end%>
  <% end %>
</div>