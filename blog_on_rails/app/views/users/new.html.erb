
<br>
<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p>
      <%= @user.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <br>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <br>
  <%= f.submit "Sign Up"%>
<% end %>

