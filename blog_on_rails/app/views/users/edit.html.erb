<h1>Edit Users</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p>
      <%= @user.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <br>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <br>
  <%= f.submit "Update User",  class: "btn btn-outline-primary"%>
<% end %>

