<div class="show">
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
  <p>By <%= @post.user&.name || "[Deleted]" %></p>
  <div class="small-font">
    Posted <%= time_ago_in_words(@post.created_at) %> ago
  </div>
  <br>
  <div class="small-font">
   last edited <%= time_ago_in_words(@post.updated_at) %>
  </div>
  <br>
  
  <% if user_signed_in? %>
  <div>
  <% if can?(:edit, @post) %>
    <button type="button" class="btn btn-outline-primary" btn-sm">
    <%= link_to "Edit", 
    edit_post_path(@post) %>
    </button>
    <% end %>
    <div>
    <% if can?(:delete, @post) %>
    <button type="button" class="btn btn-outline-primary" btn-sm">
      <%= link_to( "Delete", 
      post_path(@post), 
      method: :delete,
      data: 
      { confirm: "Are you sure?" } 
      ) %>
       
    </button>
    <% end %>
  </div>
  <% end %>
  </div>
  <br>
  <h4> Comment </h4>
  
  <%= form_for [@post, @comment] do |f| %>
    <% if @comment.errors.present? %>
      <p> <%= @comment.errors.full_messages.join(', ') %> </p>
    <% end %>
    <div>
      <%= f.text_area(
       :body,
       cols: 30,
       rows: 3,
       placeholder: "What's on your mind?"
       ) %>
    </div>
    <br>
       <%= f.submit "Submit",  class: "btn btn-outline-primary" %>
  <% end %>
  <br>  
  <% @comments.each do |comment| %>
    <div>
      <div> <%= comment.body %> </div>
      <span> <%= comment.user&.name || "[DELETED]" %></span>
      <div class="small font">
     
        Commented <%= time_ago_in_words(comment.created_at) %> ago
        âˆ™
        <% if user_signed_in? && can?(:delete, comment) %>
        <%= link_to(
          "Delete",
          post_comment_path(@post.id,comment.id),
          method: :delete, 
          data: { 
            confirm: 'Are you sure?' 
            } 
            )%>
            <% end %>
      </div>
    </div>
  <% end %>
</div>