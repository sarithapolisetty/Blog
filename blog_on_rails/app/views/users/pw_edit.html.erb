<br>
<h1>Change Password</h1>

<%= form_for(@user, url: pw_update_user_path(@user)) do |f| %>
  <% if @user.errors.any? %>
    <p>
      <%= @user.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <%= f.label :current_password %>
    <%= f.password_field :current_password %>
  </div>
  <br>
  <div>
    <%= f.label :new_password %>
    <%= f.password_field :new_password %>
  </div>
  <br>
  <div>
    <%= f.label :new_password_confirmation %>
    <%= f.password_field :new_password_confirmation %>
  </div>
  <br>
  <%= f.submit "Update Password",  class: "btn btn-outline-primary"%>
<% end %>