<% @posts.each do |post| %>  
<div class="card-group card border-secondary mb-3 mr-3" style="max-width: 18rem;" >
  <div class="card-body">
        <h5 class="card-title">
            <%= link_to post.title, 
            post_path(post.id) %>
        </h5> 
        <p class="card-text">
            <%= post.body[0..30]+ "..." %>
        </p>
      </div>
  </div>
<% end %>
