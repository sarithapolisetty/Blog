
<div class="row mx-1">
<% @posts.each do |post| %>  
<div class="col-xs-12 col-md-6 col-lg-4">
  <div class="card mb-3 mx-3">
    <div class="card-body">
     <h5 class="card-title">
      <%= link_to post.title,   
        post_path(post.id) %>
     </h5> 
     <p class="card-text">
      <%= post.body[0..30]+ "..." %>
     </p>
    </div> 
 </div>   
 </div>     
<% end %>
</div>


